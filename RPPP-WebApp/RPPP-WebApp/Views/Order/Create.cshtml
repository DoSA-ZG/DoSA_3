@model Order

@{
  ViewBag.Title = "Add new order";
}

<h2>Add new order</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="IdHarvest" class="form-label"></label>
        <select class="form-select" asp-for="IdHarvest" asp-items="ViewBag.HarvestNumber">
            <option disabled selected value="">Choose a specie</option>
        </select>
        <div class="form-text"><span asp-validation-for="IdHarvest" class="text-danger"></span></div>
    </div>

    <div class="mb-3">
        <label asp-for="IdPerson" class="form-label"></label>
        <select class="form-select" asp-for="IdPerson" asp-items="ViewBag.PersonName">
            <option disabled selected value="">Choose a person</option>
        </select>
        <div class="form-text"><span asp-validation-for="IdPerson" class="text-danger"></span></div>
    </div>
    

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <div class="form-text"><span asp-validation-for="Quantity" class="text-danger"></span></div>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <div class="form-text"><span asp-validation-for="Price" class="text-danger"></span></div>
    </div>

    <div class="mb-3">
        <label asp-for="DateOfOrder" class="form-label"></label>
        <input asp-for="DateOfOrder" class="form-control" />
        <div class="form-text"><span asp-validation-for="DateOfOrder" class="text-danger"></span></div>
    </div>
    
  <div class="text-center">
    <button class="btn btn-primary" type="submit">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
  </div>
  <div asp-validation-summary="All"></div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}