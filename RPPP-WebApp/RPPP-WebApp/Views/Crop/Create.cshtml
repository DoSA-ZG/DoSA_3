@model Crop

@{
  ViewBag.Title = "Add new crop";
}

<h2>Add new crop</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="IdSpecies" class="form-label"></label>
        <select class="form-select" asp-for="IdSpecies" asp-items="ViewBag.SpeciesName">
            <option disabled selected value="">Choose a specie</option>
        </select>
        <div class="form-text"><span asp-validation-for="IdSpecies" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label asp-for="IdTask" class="form-label"></label>
        <select class="form-select" asp-for="IdTask" asp-items="ViewBag.TaskName">
            <option disabled selected value="">Choose a task</option>
        </select>
        <div class="form-text"><span asp-validation-for="IdTask" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label asp-for="IdStatus" class="form-label"></label>
        <select class="form-select" asp-for="IdStatus" asp-items="ViewBag.StatusName">
            <option disabled selected value="">Choose a status</option>
        </select>
        <div class="form-text"><span asp-validation-for="IdStatus" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label asp-for="IdPerson" class="form-label"></label>
        <select class="form-select" asp-for="IdPerson" asp-items="ViewBag.PersonName">
            <option disabled selected value="">Choose a person</option>
        </select>
        <div class="form-text"><span asp-validation-for="IdPerson" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label asp-for="PlantingDate" class="form-label"></label>
        <input asp-for="PlantingDate" class="form-control" />
        <div class="form-text"><span asp-validation-for="PlantingDate" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <div class="form-text"><span asp-validation-for="Quantity" class="text-danger"></span></div>
    </div>
  <div class="text-center">
    <button class="btn btn-primary" type="submit">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
  </div>
  <div asp-validation-summary="All"></div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}