@model Worker2ViewModel


<tr hx-target="this" hx-swap="outerHTML">
  <td class="text-left">@Model.NamePerson</td>
    <td class="text-left">@Model.NameWorkerType</td>
    <td class="text-left">@Model.Salary</td>

    <td>
        <a class="btn btn-sm btn-primary" 
            asp-action="Show"
           asp-route-id="@Model.IdPerson"
        >Details
        </a>
    </td>
    <td>
        <a class="btn btn-sm btn-success"
           hx-get="@Url.Action(nameof(WorkerController.Edit), new { id = Model.IdPerson })"
           title="Edit">Edit</a>
    </td>
    <td>
        <button class="btn btn-sm btn-danger"
                hx-confirm="Delete Worker?"
                hx-delete="@Url.Action(nameof(WorkerController.Delete), new { id = Model.IdPerson})"
                title="Delete">
            Delete
        </button>
    </td>
</tr>
  