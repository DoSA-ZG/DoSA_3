@model Harvest


<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-start">
        @Model.IdHarvest
    </td>
    <td class="text-start">
        <select class="form-select" asp-for="IdCrop" asp-items="ViewBag.CropNumber">
        </select>
    </td>
    <td class="text-start">
        <input asp-for="Quantity" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="FromDate" class="form-control" />
    </td>
    <td class="text-start">
        <input asp-for="ToDate" class="form-control" />
    </td>
    <td class="text-start">
        <select class="form-select" asp-for="IdPerson" asp-items="ViewBag.PersonName">
        </select>
    </td>
    <td>
        <input type="hidden" asp-for="IdHarvest" />
        <button hx-include="closest tr"
                hx-post="@Url.Action(nameof(HarvestController.Edit))"
                class="btn btn-sm btn-primary" title="Save">
            <i class="fas fa-save"></i>
        </button>
    </td>
    <td>
        <button class="btn btn-sm cancel"
                hx-get="@Url.Action(nameof(HarvestController.Get), new { id = Model.IdHarvest })"
                title="Cancel">
            <i class="fas fa-undo-alt"></i>
        </button>
    </td>
    <td>
        <div asp-validation-summary="All"></div>
    </td>
</tr>