@model Harvest

@{
  ViewBag.Title = "Add new harvest";
}

<h2>Add new harvest</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label asp-for="IdCrop" class="form-label"></label>
        <select class="form-select" asp-for="IdCrop" asp-items="ViewBag.CropNumber">
            <option disabled selected value="">Choose a crop</option>
        </select>
        <div class="form-text"><span asp-validation-for="IdCrop" class="text-danger"></span></div>
    </div>
  <div class="mb-3">
    <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <div class="form-text"><span asp-validation-for="Quantity" class="text-danger"></span></div>
  </div>
    <div class="mb-3">
        <label asp-for="FromDate" class="form-label"></label>
        <input asp-for="FromDate" class="form-control" />
        <div class="form-text"><span asp-validation-for="FromDate" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label asp-for="ToDate" class="form-label"></label>
        <input asp-for="ToDate" class="form-control" />
        <div class="form-text"><span asp-validation-for="ToDate" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label asp-for="IdPerson" class="form-label"></label>
        <select class="form-select" asp-for="IdPerson" asp-items="ViewBag.PersonName">
            <option disabled selected value="">Choose a person</option>
        </select>
        <div class="form-text"><span asp-validation-for="IdPerson" class="text-danger"></span></div>
    </div>
  <div class="text-center">
    <button class="btn btn-primary" type="submit">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
  </div>
  <div asp-validation-summary="All"></div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/autocomplete.js" asp-append-version="true"></script>

}