@model Tasks


<tr hx-target="this" hx-swap="outerHTML">
    <td class="text-start">
        @Model.IdTask
    </td>
    <td class="text-start">
        <input asp-for="Task1" class="form-control" />
    </td>
    <td class="text-start">
        <select class="form-select" asp-for="IdTaskStatus" asp-items="ViewBag.StatusTaskName">
        </select>
    </td>
    <td class="text-start">
        <select class="form-select" asp-for="IdPerson" asp-items="ViewBag.PersonName">
        </select>
    </td>
    
   

    <td>
        <input type="hidden" asp-for="IdTask" />
        <button hx-include="closest tr"
                hx-post="@Url.Action(nameof(TaskController.Edit))"
                class="btn btn-sm btn-primary" title="Save">
            <i class="fas fa-save"></i>
        </button>
    </td>
    <td>
        <button class="btn btn-sm cancel"
                hx-get="@Url.Action(nameof(TaskController.Get), new { id = Model.IdTask })"
                title="Cancel">
            <i class="fas fa-undo-alt"></i>
        </button>
    </td>
    <td>
        <div asp-validation-summary="All"></div>
    </td>
</tr>